<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvItem"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:focusable="true">
    <jp.shts.android.library.TriangleLabelView
        android:id="@+id/tlvChoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        app:backgroundColor="@color/orange_1"
        app:corner="leftTop"
        app:labelBottomPadding="8dp"
        app:labelCenterPadding="0dp"
        app:labelTopPadding="18dp"
        app:primaryText="@string/choice"
        app:primaryTextColor="@color/white"
        app:primaryTextSize="10sp"
        app:secondaryText="@string/perfect"
        app:secondaryTextColor="@color/white"
        app:secondaryTextSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/logo_org_description"
            tools:srcCompat="@drawable/ic_business" />

        <TextView
            android:id="@+id/tvName"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/ivLogo"
            android:textColor="@color/green_1"
            android:textStyle="bold"
            tools:text="Organization name" />

        <TextView
            android:id="@+id/tvMission"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/ivLogo"
            android:textStyle="bold"
            tools:text="Mission of the company" />

        <TextView
            android:id="@+id/tvAddress"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMission"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="@dimen/padding"
            android:layout_toEndOf="@+id/ivLogo"
            tools:text="@string/address" />

        <TextView
            android:id="@+id/tvLocation"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/ivLogo"
            tools:text="Bellenvue, WA" />

        <TextView
            android:id="@+id/tvThemes"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLocation"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="6dp"
            android:layout_toEndOf="@+id/ivLogo"
            tools:text="Themes: gdfgd" />

        <TextView
            android:id="@+id/tvUrl"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvThemes"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="@dimen/padding"
            android:layout_toEndOf="@+id/ivLogo"
            android:autoLink="web"
            android:linksClickable="true"
            tools:text="www.site.com" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
